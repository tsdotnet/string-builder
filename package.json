{
  "name": "@tsdotnet/string-builder",
  "version": "1.0.5",
  "author": "electricessence",
  "license": "MIT",
  "types": "dist/StringBuilder.d.ts",
  "main": "dist/StringBuilder.js",
  "module": "dist-esm/StringBuilder.js",
  "keywords": [
    "string builder",
    "StringBuilder"
  ],
  "scripts": {
    "clean": "rimraf dist/* && rimraf dist-esm/*",
    "build": "npm prune && npm install && npm run clean && copyfiles -u 1 src/**/*.d.ts dist && tsc && tsc -p tsconfig.esm.json",
    "bump": "npm run precommit && npm version patch",
    "lint": "eslint src/**/*.ts",
    "precommit": "npm run lint && npm run test && npm run build",
    "prepublishOnly": "npm run build && npm run test",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags",
    "test": "ts-node -P ./tsconfig.json ./node_modules/jasmine/bin/jasmine --config=spec/jasmine.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsdotnet/string-builder.git"
  },
  "bugs": {
    "url": "https://github.com/tsdotnet/string-builder/issues"
  },
  "homepage": "https://github.com/tsdotnet/string-builder#readme",
  "devDependencies": {
    "@types/jasmine": "^3.5.10",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "copyfiles": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jasmine": "^3.5.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  }
}
