{
  "name": "@tsdotnet/string-builder",
  "version": "1.0.9",
  "author": "electricessence",
  "license": "MIT",
  "types": "dist/StringBuilder.d.ts",
  "main": "dist/StringBuilder.js",
  "module": "dist-esm/StringBuilder.js",
  "keywords": [
    "string builder",
    "StringBuilder"
  ],
  "scripts": {
    "build:dist": "rimraf dist/* && copyfiles -u 1 src/**/*.d.ts dist && tsc",
    "build:dist-esm": "rimraf dist-esm/* && tsc -p tsconfig.esm.json",
    "build": "npm i && run-p build:*",
    "bump": "npm run precommit && npm version patch",
    "docs": "rimraf docs/* && rimraf docs/.nojekyll && typedoc --options typedoc.json --readme none && node ./.build/create-nojekyll.js",
    "lint": "eslint src/**/*.ts",
    "precommit": "npm i && run-p lint test && run-p build:* && npm run validate",
    "prepublishOnly": "npm run build && run-p validate test",
    "preversion": "run-p lint test",
    "postversion": "git push && git push --tags && npm run docs && git commit -m \"Updated docs.\" docs && git push",
    "test": "ts-node -P ./tsconfig.json ./node_modules/jasmine/bin/jasmine --config=spec/jasmine.json",
    "validate": "node ./.build/validate-package.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsdotnet/string-builder.git"
  },
  "bugs": {
    "url": "https://github.com/tsdotnet/string-builder/issues"
  },
  "homepage": "https://github.com/tsdotnet/string-builder#readme",
  "devDependencies": {
    "@types/jasmine": "^3.5.10",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "copyfiles": "^2.2.0",
    "eslint": "^7.0.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jasmine": "^3.5.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.1",
    "typedoc": "^0.17.6",
    "typescript": "^3.9.2"
  }
}
